{
    "manifest_version": 3,
    "name": "Safrà",
    "version": "1.0.0",
    "description": "Safrà és una extensió de Google Chrome que et permet traduir qualsevol pàgina web al valencià de forma ràpida i fàcil.",
    "icons": {
      "32": "32-icon.png"
    },

    "background": {
      "service_worker": "service-worker.js",
      "type": "module"
    },
    "action":{
        "default_popup": "index.html"
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": [
        "http://*/*", 
        "https://*/*"]
  }